&blsp1_uart2 {
	interrupt-names = "core_irq", "bam_irq";
	interrupts = <0 1>;
	interrupt-map = <0 &intc 0 0 108 0
			1 &intc 0 0 238 0>;
	/delete-property/ qcom,inject-rx-on-wakeup;
	/delete-property/ qcom,rx-char-to-inject;
	qcom,msm-obs;
};

/ {
	bluesleep {
		compatible = "qcom,bluesleep";
		interrupt-parent = <&tlmm>;
		interrupts = <24 0>;
		interrupt-names = "host_wake_int";
		bt_host_wake = <&tlmm 24 0>; /* BT_HOST_WAKE */
		bt_ext_wake = <&tlmm 92 0>; /* BT_DEV_WAKE */
		pinctrl-names = "default", "sleep";
		pinctrl-0 = <&bt_default>;
		pinctrl-1 = <&bt_sleep>;
	};

	bcm43xx {
		compatible = "bcm,bcm43xx";
		bcm,reg-on-gpio = <&pm8994_gpios 19 0>; /* BT_REG_ON */
	};

	/* BCMDHD for Wi-Fi */
	bcmdhd_wifi {
		compatible = "lge,bcmdhd_wlan";
		wlan-en-gpio = <&pm8994_gpios 8 0>;
		wlan-hostwake-gpio = <&tlmm 73 0>;
	};
};

&tlmm {
	/* not sure why this is here... */
	i2c_3 {
		i2c_3_active: i2c_3_active {
			mux {
				pins = "gpio47", "gpio48";
				function = "blsp_i2c3";
			};

			config {
				pins = "gpio47", "gpio48";
				drive-strength = <2>;
				bias-disable;
			};
		};

		i2c_3_sleep: i2c_3_sleep {
			mux {
				pins = "gpio47", "gpio48";
				function = "blsp_i2c3";
			};

			config {
				pins = "gpio47", "gpio48";
				drive-strength = <2>;
				bias-pull-up;
			};
		};
	};

	/* gpio pin mux for bluetooth */
	pmx_bt_default {
		bt_default: bt_default {
			mux {
				pins = "gpio24", "gpio92";
				function = "gpio";
			};

			config {
				pins = "gpio24", "gpio92";
				drive-strength = <2>;
				bias-disable;
			};
		};
	};

	pmx_bt_sleep {
		bt_sleep: bt_sleep {
			mux {
				pins = "gpio24", "gpio92";
				function = "gpio";
			};

			config {
				pins = "gpio24", "gpio92";
				drive-strength = <2>;
				bias-disable;
			};
		};
	};
};
